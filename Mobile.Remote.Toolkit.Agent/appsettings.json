{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ApiBaseUrl": "https://localhost:7090",
  "AgentId": "agent-local",
  "RefreshInterval": "00:00:30",
  "CommandTimeout": "00:05:00",
  "HeartbeatInterval": "00:01:00",
  "MaxRetries": 3,
  "AndroidTools": {
    "AdbPath": "",
    "ScrcpyPath": "",
    "AutoDetectTools": true,
    "DeviceRefreshInterval": "00:00:10"
  },
  "Security": {
    "ApiKey": "",
    "ValidateApiCertificate": true,
    "AllowedCommands": [
      "devices",
      "shell",
      "install",
      "uninstall",
      "push",
      "pull",
      "logcat",
      "screenshot",
      "screenrecord"
    ]
  },
  "Performance": {
    "MaxConcurrentCommands": 5,
    "CommandQueueSize": 100,
    "EnableMetrics": true
  },
  "WindowsService": {
    "ServiceName": "MobileRemoteToolkitAgent",
    "DisplayName": "Mobile Remote Toolkit Agent",
    "Description": "Agent para detectar dispositivos Android y ejecutar comandos remotos"
  }
}
